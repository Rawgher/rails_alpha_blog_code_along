<% if @article.errors.any?  %>
  <h2>The following errors have prevented the article from being saved </h2>
  <ul>
    <%# for loop that allows any error messages to be displayed after form submission %>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>
